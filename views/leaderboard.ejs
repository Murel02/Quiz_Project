<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Leaderboard</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
<header>
    <nav>
        <a href="/home">Home</a>
        <a href="/quiz">Quiz</a>
        <a href="/logout">Logout</a>
    </nav>
</header>
<div class="container">
    <h1>Leaderboard</h1>
    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Score</th>
        </tr>
        </thead>
        <tbody>
        <% users.forEach(user => { %>
            <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.score %></td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>
</body>
</html>
