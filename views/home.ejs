<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta information for page encoding and responsiveness -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Ensures proper scaling on mobile devices -->
    <title>Welcome to QuizMaster</title> <!-- Page title -->
    <link rel="stylesheet" href="/style.css"> <!-- Link to external stylesheet for styling -->
</head>
<body>
<header class="header">
    <!-- Logo linking to the home page -->
    <a href="/home" class="logo">
        <img src="/images/pixilart-drawing.png" alt="QuizMaster Logo" class="logo-image"> <!-- Logo image -->
    </a>
    <!-- Site title -->
    <h1 class="site-title">Welcome to QuizMaster!</h1>
    <nav class="nav">
        <!-- Conditional rendering of navigation links based on login status -->
        <% if (isLoggedIn) { %>
            <a href="/logout" class="nav-link">Logout</a> <!-- If logged in, show logout -->
        <% } else { %>
            <a href="/login" class="nav-link">Login</a> <!-- If not logged in, show login -->
            <a href="/register" class="nav-link">Register</a> <!-- If not logged in, show register -->
        <% } %>
    </nav>
</header>

<main class="main">
    <div class="container">
        <h1 class="main-title">Test Your Knowledge</h1> <!-- Main title for the page -->
        <p class="main-description">Ready to challenge yourself? Start a quiz now!</p> <!-- Description of the quiz -->
        <div class="actions">
            <!-- Form to start a new quiz -->
            <form action="/quiz/create" method="POST">
                <button type="submit" class="button">Start Quiz</button> <!-- Submit button to start the quiz -->
            </form>
        </div>

        <!-- Mini Leaderboard Section -->
        <section class="leaderboard-preview">
            <h2 class="leaderboard-title">Top Players</h2> <!-- Title for the leaderboard section -->
            <table class="leaderboard-table">
                <thead>
                <!-- Table headers for player name and score -->
                <tr>
                    <th>Name</th>
                    <th>Score</th>
                </tr>
                </thead>
                <tbody>
                <!-- Loop through the topPlayers array to display player data -->
                <% topPlayers.forEach(player => { %>
                    <tr>
                        <td><%= player.name %></td> <!-- Player's name -->
                        <td><%= player.score %></td> <!-- Player's score -->
                    </tr>
                <% }) %>
                </tbody>
            </table>
            <!-- Link to view the full leaderboard -->
            <a href="/leaderboard" class="button">View Full Leaderboard</a>
        </section>
    </div>
</main>
<footer class="footer">
    <!-- Footer with copyright information -->
    <p>&copy; 2024 QuizMaster. All rights reserved.</p>
</footer>
</body>
</html>
